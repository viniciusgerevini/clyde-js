  },
  "bin": {
    "clyde": "./src/cli.js"
  },
  "dependencies": {
    "@clyde-lang/interpreter": "^0.1.2",
    "@clyde-lang/parser": "^0.1.2",
    "yargs": "^16.2.0"
  },
  "devDependencies": {
    "ascjs": "^4.0.3",
    "jest": "^27.2.4"
  },
  "module": "./src/index.js",
  "type": "module",
  "exports": {
    ".": {
      "import": "./src/index.js",
      "default": "./cjs/index.js"
    },
    "./package.json": "./package.json"
  },
  "jest": {
    "transform": {}
  }
