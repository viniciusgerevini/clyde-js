{
  "name": "@clyde-lang/cli",
  "version": "0.1.2",
  "description": "CLI tool for executing, parsing and debugging Clyde dialogue files",
  "main": "./cjs/index.js",
  "author": "Vinicius Gerevini <viniciusgerevini@gmail.com>",
  "license": "MIT",
  "scripts": {
    "start": "node ./src/cli.js",
    "build": "npm run cjs",
    "cjs": "mkdir -p cjs && ascjs src cjs",
