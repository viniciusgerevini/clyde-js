{
  "name": "@clyde-lang/cli",
  "version": "2.1.0",
  "description": "CLI tool for executing, parsing and debugging Clyde dialogue files",
  "main": "./dist/cjs/index.js",
  "author": "Vinicius Gerevini <viniciusgerevini@gmail.com>",
  "license": "MIT",
  "scripts": {
    "prepublish": "npm run build",
    "build": "rm -rf dist/* && tsc -p tsconfig.json && tsc-esm-fix --target dist/mjs && tsc -p tsconfig-cjs.json && ./configure_dist_modules",
    "test": "jest --coverage",
    "start": "node ./dist/cjs/cli.js"
  },
  "bin": {
    "clyde": "./dist/cjs/cli.js"
  },
  "dependencies": {
    "@clyde-lang/interpreter": "3.0.0",
    "@clyde-lang/parser": "2.1.0",
    "yargs": "^16.2.0"
  },
  "devDependencies": {
    "@types/jest": "^28.1.1",
    "@types/yargs": "^17.0.10",
    "jest": "^28.1.1",
    "ts-jest": "^28.0.4",
    "tsc-esm-fix": "^2.18.0",
    "typescript": "^4.7.3"
  },
  "module": "./dist/mjs/index.js",
  "type": "module",
  "exports": {
    ".": {
      "import": "./dist/mjs/index.js",
      "default": "./dist/cjs/index.js"
    },
    "./package.json": "./package.json"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node"
  }
}
